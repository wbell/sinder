doctype html
html(lang='en')

  head
    meta(charset='UTF-8')
    title=title
    link(rel='stylesheet', href=(env==='production' ? cssMin : css))

  body(ng-app=appName)
    sin-header
    div(class='view-wrapper', ng-controller=appName+'.wrapperModule.wrapperCtrl')
      ui-view(ng-class="{'slide-left':slideLeft, 'slide-right':!slideLeft}")
    script(src=(env==='production' ? jsMin : js))
